.homepage-banner {
	background-position: center;
	background-repeat: no-repeat;
	background-size: cover;
	margin: 0 auto;

	.container {
		padding: 2rem 0;

		.main-homepage-banner {
			&__title {
				color: var(--system-text-white-color);
				font-size: 48px;
				font-weight: bold;
				line-height: 51px;
				margin-top: 45px;
				word-spacing: 5px;
			}

			&__button {
				background-color: #017890;
				border: none;
				border-radius: 10px;
				color: white;
				font-size: 20px;
				margin-top: 2rem;
				outline: none;
				padding: 1rem 3rem;
				transition: all 0.3s;
			}

			&__button:hover {
				background-color: #009DC4;
			}

			&__description {
				color: #ffb800;
				font-size: 28px;
				letter-spacing: 1px;
				line-height: 19px;
				padding-top: 13px;
			}

			&__getStarted {
				align-items: center;
				background: var(--input-background-color);
				border: 0.5px solid #848e9c;
				border-radius: 30px;
				display: flex;
				justify-content: space-between;
				margin-bottom: 65px;
				position: relative;

				&__progress {
					background-color: #009DC4;
					border-radius: 30px 0 0 30px;
					height: 100%;
					left: 0;
					position: absolute;
					top: 0;
					width: calc(80% - 140px);
				}

				&__input-search {
					max-width: 543px;
					text-align: center;
					width: 100%;

					input {
						background: transparent;
						border: none;
						border-radius: 30px;
						color: var(--system-text-white-color);
						height: 46px;
						margin-right: 10px;
						max-width: 534px;
						outline: none;
						padding: 0 20px;
						text-align: left;
						width: 100%;

						&:active {
							border: none;
						}

						&::-webkit-input-placeholder {
							color: #c4c4c4;
						}
					}
				}

				.action-started {
					background: pink !important;
					border: none;
					border-bottom-right-radius: 30px;
					border-top-right-radius: 30px;
					color: var(--system-text-white-color);
					cursor: pointer;
					font-size: 16px;
					height: 46px;
					line-height: 19px;
					min-width: 140px;
					outline: none;
					text-transform: uppercase;
				}
			}
		}
	}

	&__position1 {
		bottom: 0;
		left: 120px;
		position: absolute;
	}

	&__position2 {
		position: absolute;
		right: 100px;
		top: 0;
	}
}

.homepage-event {
	background: dark;
	padding: 50px 0 10px 0;

	.container {
		padding: 0;

		.slick-initialized {
			.slick-list .slick-track .slick-slide {
				padding: 0 1rem;

			}
			.slick-dots li.slick-active button:before {
				color:white !important;
			}
			.slick-prev {
				&::before {
					border-radius: 20px;
					border: none;
					background-color: gray;
					color: var(--system-text-white-color);
					content: '﹤';
					font-size: 25px;
					margin-left: -28px;
					padding: 6px 10px 8px 6px;
					vertical-align: middle;
				}
			}

			.slick-next {
				&::before {
					border-radius: 20px;
					border: none;
					background-color: gray;
					color: var(--system-text-white-color);
					content: '﹥';
					font-size: 25px;
					margin-right: -28px;
					padding: 6px 6px 8px 10px;
					vertical-align: middle;
				}
			}
		}

		.event-more {
			align-items: center;
			display: flex;
			flex-direction: row;
			justify-content: center;
			padding-top: 20px;

			&__description {
				color: white;
				font-size: 16px;
				line-height: 19px;
				margin-right: 10px;
			}

			&__more {
				color: white;
				cursor: pointer;
				font-size: 16px;
				line-height: 19px;
				margin-left: 10px;
			}
		}
	}
}

.homepage-markets {
	background: dark;
	padding: 50px 0 100px 0;
}

.homepage-download {
	background: dark;
	height: 493px;
	margin: 0 auto;
	padding-top: 50px;
	position: relative;

	.container {
		width: 1240px;

		.main-homepage-download {
			text-align: left;
		}
	}

	&__position3 {
		position: absolute;
		right: 0;
		top: 0;
	}

	&__position4 {
		bottom: 0;
		left: 550px;
		position: absolute;
		right: 100px;
		z-index: 0;

		img {
			width: 18%;
		}
	}
}

