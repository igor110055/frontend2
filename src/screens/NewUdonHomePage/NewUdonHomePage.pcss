.homepage-trade {
	background: dark;
	text-align: center;

	.container {
		.main-homepage-trade {
			padding: 90px 0;

			h3 {
				color: var(--system-text-white-color);
				font-size: 48px;
				line-height: 56px;
				padding-top: 25px;
			}

			p {
				color: var(--system-text-white-color);
				font-size: 20px;
				font-weight: 300;
				line-height: 28px;
				padding-top: 36px;
			}

			.main-homepage-trade__btn {
				padding-top: 36px;

				&__button {
					background-color: #017890;
					border: none;
					border-radius: 10px;
					color: white;
					font-size: 18px;
					margin-top: 2rem;
					outline: none;
					padding: 1rem 3rem;
					transition: all 0.3s;
				}
	
				&__button:hover {
					background-color: #009DC4;
				}
				.btn-active {
					background-color: #017890;
					border: none;
					border-radius: 10px;
					color: white;
					font-size: 18px;
					margin-top: 2rem;
					outline: none;
					padding: 1rem 3rem;
					transition: all 0.3s;
				}
				
				.btn-none on hover{
					background-color: #017890;
					border: none;
					border-radius: 10px;
					color: white;
					font-size: 18px;
					margin-top: 2rem;
					outline: none;
					padding: 1rem 3rem;
					transition: all 0.3s;
				}
				
			}
		}
	}
}

.homepage-info {
	align-items: center;
	border-radius: 5px;
	box-shadow: 0 4px 21px rgba(0, 0, 0, 0.1);
	display: flex;
	flex-direction: row;
	gap: 1rem;
	padding: 2rem 4rem;

	&__number {
		align-items: center;
		border: 5px solid #99ffe7;
		border-radius: 50%;
		box-sizing: border-box;
		color: white;
		display: flex;
		font-size: 30px;
		font-weight: bold;
		height: 8rem;
		justify-content: center;
		padding: 1rem;
		text-align: center;
		width: 8rem;
	}

	&__text {
		align-items: center;
		color: white;
		display: flex;
		font-size: 2rem;
		justify-content: center;
		text-align: center;
	}
}
